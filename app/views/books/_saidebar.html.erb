<h1>User info</h1>
<p><%= image_tag user.get_profile_image(100,100) %></p>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th>  <%= user.name %> </th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th> <%= user.introduction %> </th>
  </tr>
</tbody></table>

<%= link_to edit_user_path(user), class: "btn btn-secondary w-100" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>