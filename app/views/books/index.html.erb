<%= flash[:notice] %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
<div class="col-md-3">
<%= render 'saidebar', book: @book, user: @user %>
</div>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table">

  <thead>
  <tr>
  <th>Title</th>
  <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>

  <td><%= link_to book.title, book_path(book.id) %></td>

  
  <td><%= book.body %></td>
  </tr>
<% end %>
</table>
</div>
</div>