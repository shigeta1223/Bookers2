<div class="row">
<div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @user do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>
  
  <h4>introduction</h4>
  <%= f.text_area :introduction %>
  
  <br><%= f.submit 'Update User',class:"btn btn-secondary" %></br>
  
<% end %>
</div>
</div>