<%= flash[:notice] %>
<div class="row">
<div class="col-md-3">
<%= render 'books/saidebar', book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table">

  <thead>
  <tr>
  <th>Title</th>
  <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
  <% @user_books.each do |book| %>
    <tr>
    <td><%= link_to(user_path(book.user)) do %>
      <%= image_tag book.user.get_profile_image(100, 100) %>
    <% end %></td>
  

  <td><%= link_to book.title, book_path(book.id) %></td>

  
  <td><%= book.body %></td>
  </tr>
<% end %>
</table>
</div>
</div>